{
    "name": "No Infinite Scroll",
    "version": "1.0.0",
    "manifest_version": 2,
    "content_scripts":[
        {
          "matches":[
            "http://*/*", "https://*/*"
          ],
          "js":[
            "content.js"
          ]
        }
    ],
    "description": "This detects infinite scroll, and keeps you away from these distracting websites with simple messages for your productivity.",
    "browser_action": {
        "default_icon": "icons/icon128.png"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}